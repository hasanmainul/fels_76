<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/errors", target: @category %>
      <%= f.label :title, t("lesson_title") %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :info, t("info") %>
      <%= f.text_field :info, class: "form-control" %>
      <%= f.submit t("create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

