<% provide :title, t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t "welcome" %></h1>
  <h2>
  <%= t "to_begin" %>
  </h2>
  <%= link_to t("sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
